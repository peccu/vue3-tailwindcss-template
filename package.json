{
  "name": "vue-app",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "vite --host",
    "build": "./scripts/v.sh ; npm-run-all -p type-check 'build-only -- {@}' -s make404 --",
    "preview": "vite preview --host",
    "test:unit": "vitest",
    "test:e2e": "playwright test && run-s test:e2e:show-report",
    "test:e2e:show-report": "playwright show-report --host 0.0.0.0",
    "// test:e2e:update-snapshots": "take snapshot from built (dist) dir. so you need to build before take snapshots",
    "test:e2e:update-snapshots": "CI=1 playwright test --update-snapshots",
    "// test:e2e:vrt": "take snapshot for visual regression test. This build and take snapshots",
    "test:e2e:vrt-snapshots": "run-s build-only test:e2e:update-snapshots",
    "test:e2e:vrt": "run-s test:e2e",
    "build-only": "vite build",
    "make404": "cp dist/index.html dist/404.html",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "pinia": "^2.1.6",
    "vue": "^3.3.4",
    "vue-router": "^4.2.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.38.0",
    "@rushstack/eslint-patch": "^1.3.3",
    "@tsconfig/node18": "^18.2.2",
    "@types/jsdom": "^21.1.3",
    "@types/node": "^18.17.17",
    "@vitejs/plugin-vue": "^4.3.4",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.1",
    "@vue/tsconfig": "^0.4.0",
    "autoprefixer": "^10.4.15",
    "eslint": "^8.49.0",
    "eslint-plugin-vue": "^9.17.0",
    "jsdom": "^22.1.0",
    "postcss": "^8.4.29",
    "npm-run-all2": "^6.0.6",
    "prettier": "^3.0.3",
    "tailwindcss": "^3.3.3",
    "typescript": "~5.2.0",
    "vite": "^4.4.9",
    "vitest": "^0.34.4",
    "vue-tsc": "^1.8.11"
  },
  "// engines": {
    "node": "16.x"
  },
  "glitch": {
    "projectType": "generated_static"
  }
}
